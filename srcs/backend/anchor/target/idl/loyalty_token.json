{
  "version": "0.1.0",
  "name": "loyalty_token",
  "instructions": [
    {
      "name": "createLoyaltyMint",
      "docs": [
        "Creates an SPL-2022 mint whose authority is a PDA derived",
        "from the business signer, mints `initial_supply` to the business ATA",
        "and stores on-chain metadata (rate to LOYL etc.)."
      ],
      "accounts": [
        {
          "name": "mintAuthority",
          "isMut": false,
          "isSigner": false,
          "docs": [
            "PDA that will own & freeze the mint"
          ]
        },
        {
          "name": "loyaltyMeta",
          "isMut": true,
          "isSigner": false,
          "docs": [
            "Metadata (rate, decimals, bump)"
          ]
        },
        {
          "name": "mint",
          "isMut": true,
          "isSigner": true,
          "docs": [
            "SPL-2022 Mint itself"
          ]
        },
        {
          "name": "businessAta",
          "isMut": true,
          "isSigner": false,
          "docs": [
            "Businessâ€™s associated token account for this mint"
          ]
        },
        {
          "name": "businessAuthority",
          "isMut": true,
          "isSigner": true
        },
        {
          "name": "tokenProgram",
          "isMut": false,
          "isSigner": false
        },
        {
          "name": "associatedTokenProgram",
          "isMut": false,
          "isSigner": false
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "decimals",
          "type": "u8"
        },
        {
          "name": "rateLoyl",
          "type": "u64"
        },
        {
          "name": "initialSupply",
          "type": "u64"
        }
      ]
    },
    {
      "name": "earnPoints",
      "accounts": [
        {
          "name": "businessAuthority",
          "isMut": true,
          "isSigner": true
        },
        {
          "name": "businessAta",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "userAta",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "mint",
          "isMut": false,
          "isSigner": false
        },
        {
          "name": "tokenProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "amount",
          "type": "u64"
        }
      ]
    },
    {
      "name": "redeemPoints",
      "accounts": [
        {
          "name": "userAuthority",
          "isMut": true,
          "isSigner": true
        },
        {
          "name": "userAta",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "businessAta",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "mint",
          "isMut": false,
          "isSigner": false
        },
        {
          "name": "tokenProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "amount",
          "type": "u64"
        }
      ]
    }
  ],
  "accounts": [
    {
      "name": "LoyaltyMeta",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "mint",
            "type": "publicKey"
          },
          {
            "name": "business",
            "type": "publicKey"
          },
          {
            "name": "decimals",
            "type": "u8"
          },
          {
            "name": "rateLoyl",
            "type": "u64"
          },
          {
            "name": "bump",
            "type": "u8"
          }
        ]
      }
    }
  ],
  "events": [
    {
      "name": "MintCreated",
      "fields": [
        {
          "name": "mint",
          "type": "publicKey",
          "index": false
        },
        {
          "name": "business",
          "type": "publicKey",
          "index": false
        },
        {
          "name": "supply",
          "type": "u64",
          "index": false
        }
      ]
    }
  ]
}